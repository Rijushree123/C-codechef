#include <iostream>

using namespace std;

int main()
{
    int T,G,I,N,Q,A=0;
    cin>>T;
    while(T--)
    {
        cin>>G;
        while(G--)
        {
            cin>>I>>N>>Q;
            if(N==1)
            {
                if(I==Q)
                {
                    A=0;
                }
                else
                {
                    A=1;
                }
            }
            else if(N%2==0)
            {
                A=N/2;
            }
            else{
                if(I==1)
                {
                    if(Q==1)
                    {
                        A=N/2;
                    }
                    else
                    {
                        A=(N/2)+1;
                    }
                }
                else{
                    if(Q==2)
                    {
                        A=N/2;
                    }
                    else
                    {
                        A=(N/2)+1;
                    }
                }
            }
            
            cout<<A<<endl;
        }
    }
}
